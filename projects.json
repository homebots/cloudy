{
  "registry": "d.homebots.io/v2",
  "projects": [
    {
      "image": "homebots-node",
      "projectRoot": "images/node"
    },
    {
      "image": "homebots-node-app",
      "projectRoot": "images/node-app"
    },
    {
      "image": "homebots-alfred",
      "service": "alfred",
      "projectRoot": "images/alfred",
      "serviceConfig": "nginx/alfred.conf",
      "ports": [
        "2000:80"
      ]
    },
    {
      "from": "d.homebots.io/v2/homebots-node-app",
      "service": "hub",
      "serviceConfig": "nginx/hub.conf",
      "ports": [
        "2999:2999",
        "3000:3000"
      ],
      "env": {
        "GIT_URL": "https://github.com/homebots/relay.git",
        "SSL": "1",
        "HTTP_PORT": "2999",
        "SOCKET_PORT": "3000",
        "DEBUG": "1"
      }
    },
    {
      "service": "mdaas",
      "from": "d.homebots.io/v2/homebots-node-app",
      "serviceConfig": "nginx/service.conf",
      "port": 2001,
      "ports": [
        "_port_:_port_"
      ],
      "env": {
        "PORT": "_port_",
        "GIT_URL": "https://github.com/homebots/mdaas.git"
      }
    },
    {
      "service": "json",
      "from": "d.homebots.io/v2/homebots-node-app",
      "serviceConfig": "nginx/service.conf",
      "port": 2002,
      "ports": [
        "_port_:_port_"
      ],
      "env": {
        "PORT": "_port_",
        "GIT_URL": "https://github.com/homebots/jsonstore.git"
      }
    }
  ]
}
